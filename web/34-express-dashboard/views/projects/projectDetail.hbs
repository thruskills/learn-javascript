<div>
    {{#if success}}
    <p class="alert-success">Project updated successfully.</p>
    {{/if}}
    <h1>Project detail</h1>
    <hr>
    <br>

    <form action="/projects/{{project._id}}" method="POST">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="title">Title</label>
                <input type="tetx" name="title" class="form-control" id="title" placeholder="Project title" value="{{project.title}}">
            </div>
            <div class="form-group col-md-6">
                <label for="image">Image</label>
                <input type="text" name="image" class="form-control" id="image" placeholder="Project image url" value="{{project.image}}">
            </div>
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" id="description" placeholder="Description" name="description" rows="5">{{project.description}}</textarea>
        </div>
        
        
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>